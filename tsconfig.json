{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2017",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
